@model ItCareer.Models.DogDto

@{ Layout = "_Layout"; }

<form method="post" asp-action="EditADog" asp-route-id="@Model.Id">
    <h5>Enter name:</h5>
    <input asp-for="@Model.Name" value="@Model.Name" />
    <h5>Enter age:</h5>
    <input asp-for="@Model.Age" value="@Model.Age" />
    <h5>Enter breed:</h5>
    <input asp-for="@Model.BreedName" value="@Model.BreedName" />
    <h5>Enter colour:</h5>
    <input asp-for="@Model.ColourName" value="@Model.ColourName" />

    <button type="submit" class="btn btn-outline-primary">Save</button>
</form>